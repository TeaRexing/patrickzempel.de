{
  "name": "npm-boilerplate",
  "version": "0.0.1",
  "description": "A super simple boilerplate to create static websites using only npm scripts",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:scss": "sass --no-source-map src/scss/index.scss ./public_html/index.css",
    "css:lint": "stylelint src/scss/*.scss  --custom-syntax postcss-scss",
    "css:autoprefixer": "postcss -u autoprefixer -r public_html/index.css",
    "css:purify": "purifycss public_html/index.css public_html/*.html --min --info --out public_html/index.css",
    "watch:css": "onchange \"src/scss/**/*\" -- npm run build:css",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "build:images": "imagemin src/img/* --out-dir=public_html/",
    "watch:fonts": "onchange \"src/fonts/*\" -- npm run build:fonts",
    "build:fonts": "copy \"src/fonts/**/*\" public_html",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js/**/*\" -- webpack --mode=development",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/pages/**/*\" -- npm run build:html",
    "serve": "browser-sync start --server \"public_html\" --files \"public_html\"",
    "watch": "run-p build:* && run-p serve watch:*",
    "build": "run-p build:*",
    "production": "npm run purge && run-p build:* && npm run css:purify",
    "purge": "rimraf public_html/"
  },
  "keywords": [],
  "author": "Patrick Zempel",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.19.0",
    "autoprefixer": "^10.4.8",
    "babel-loader": "^8.2.5",
    "browser-sync": "^2.27.10",
    "copy": "^0.3.2",
    "cssnano": "^7.0.6",
    "eslint": "^8.23.0",
    "eslint-webpack-plugin": "^3.2.0",
    "htmlnano": "^2.0.2",
    "imagemin-cli": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^10.0.0",
    "postcss-scss": "^4.0.4",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-lorem": "^1.0.0",
    "posthtml-modules": "^0.9.0",
    "purify-css": "^1.2.5",
    "rimraf": "^3.0.2",
    "sass": "^1.56.1",
    "stylelint": "^14.11.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "jquery": "^3.6.1",
    "jquery-migrate": "^3.4.0"
  }
}
